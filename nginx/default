server {

  server_name aarusin.ru;

  root /var/www/dist;
  index index.html;

  location / {
    try_files $uri $uri/ /index.html;
  }

    listen 443 ssl;
    listen [::]:443 ssl ipv6only=on;
    ssl_certificate /etc/letsencrypt/live/aarusin.ru/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/aarusin.ru/privkey.pem;
    include /etc/letsencrypt/options-ssl-nginx.conf;
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;

}

server {
  if ($host = aarusin.ru) {
      return 301 https://$host$request_uri;
  }


  listen 80;
  listen [::]:80;

  server_name aarusin.ru;
  return 404;


}